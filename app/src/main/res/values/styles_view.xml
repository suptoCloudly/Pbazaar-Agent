<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--styles for buttons-->

    <style name="Button.Flat" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-mono</item>
    </style>

    <style name="Button.Flat.Submit">
        <item name="android:background">@drawable/button_background</item>
    </style>


    <!--styles for label text view -->

    <style name="Label">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:alpha">.86</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>


</resources>